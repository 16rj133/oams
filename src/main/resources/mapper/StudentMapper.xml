<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zufe.oams.mapper.StudentMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.zufe.oams.pojo.Student">
        <id column="id" property="id" />
        <result column="password" property="password" />
        <result column="name" property="name" />
        <result column="sex" property="sex" />
        <result column="age" property="age" />
        <result column="phone" property="phone" />
        <result column="email" property="email" />
        <result column="classesNo" property="classesNo" />
    </resultMap>
    <update id="updatePassword">
        update student
        set password = #{newPassword}
        where id = #{id}
    </update>
    <select id="selectById" resultType="com.zufe.oams.pojo.Student">
        select * from student
        where id = #{id}
    </select>
    <select id="selectStudent" resultType="com.zufe.oams.pojo.Student">
        <if test='type==null or type!="1"'>
            select * from student
            where 1 = 1
        </if>
        <if test='type=="1"'>
            select distinct student.id,student.password,student.name,student.sex,student.age,student.phone,student.email,student.classesNo
            from student
        </if>
       <!-- <if test="classesNo!=null and classesNo!=''">
            and student.classesNo = #{classesNo}
        </if>-->
        <if test="keyword != null and keyword!=''">
            and student.id like CONCAT('%', #{keyword}, '%')
            or student.name like CONCAT('%', #{keyword}, '%')
        </if>
    </select>
</mapper>
